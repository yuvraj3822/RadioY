<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark">
<RelativeLayout
    android:id="@+id/main"
    android:padding="5dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_baseline_drag_indicator_24"
        android:id="@+id/drag_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/drag_indicator"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:text="Album title"
        android:layout_toRightOf="@+id/image"
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:maxLength="25"

        android:textColor="@color/light"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/album_title"
        android:textSize="12sp"
        android:text="Track title"
        android:layout_toRightOf="@+id/image"
        android:id="@+id/track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:maxLength="25"
        android:textColor="@color/light"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/album_title"
        android:textSize="12sp"
        android:text="Track titlefdjdjkdjdjfjdjsfjlskjdsjljkdsljlfjdslkjldfskjslkjldskjlfkjldskjljkfdlsjklfkjljksldkjfskjlsdjkfkjdsljkdfljkljfdskjdkjlsdkjjkksdflkj"
        android:layout_toRightOf="@+id/track_title"
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>
    <View
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/light"/>

</RelativeLayout>